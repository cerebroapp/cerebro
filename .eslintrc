{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "consistent-return": 0,
    "comma-dangle": 0,
    "no-use-before-define": 0,
    "react/jsx-no-bind": 0,
    "react/prefer-stateless-function": 0,
    "no-console": 0,
    "semi": ["error", "never"],
    "no-confusing-arrow": ["off"]
  },
  "plugins": [
    "import",
    "react"
  ],
  "settings": {
    "import/core-modules": "electron",
    "import/resolver": {
      "webpack": {
        "config": "../webpack.config.base.js"
      }
    }
  }
}
