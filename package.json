    "postcss": "8.4.16",
    "postcss-loader": "7.0.1",
    "postcss-nested": "5.0.6",
    "style-loader": "3.3.1",
    "url-loader": "4.1.1",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-middleware": "5.3.3",
    "webpack-hot-middleware": "2.25.2",
    "webpack-visualizer-plugin": "0.1.11"
  },
  "dependencies": {
